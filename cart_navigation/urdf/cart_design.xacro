<?xml version='1.0'?>

<robot name="cart" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find cart_navigation)/urdf/inertial_macros.xacro" />

  <!-- STEP 5 - Gazebo plugin -->
  <xacro:include filename="$(find cart_navigation)/urdf/cart_control.gazebo" /> 

   <!-- STEP 4 - RViz colors -->
  <xacro:include filename="$(find cart_navigation)/urdf/material.xacro" />

  <!-- STEP 1 - Robot footprint -->
  <link name="base_footprint">

  </link>

  <!-- STEP 2 - Robot chassis = base_link -->
  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0 0 -0.075" rpy="0 0 0" />
    <parent link="base_footprint"/>
    <child link="base_link" />
  </joint>

  <link name='base_link'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="15.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.0625" ixy="0" ixz="0"
          iyy="0.2125" iyz="0"
          izz="0.25"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size="1 .5 .15"/>
      </geometry>
    </collision>

    <visual name='base_link_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size="1 .5 .15"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Stand Panel -->
  <!-- <link name="stand_panel">
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.166667" iyy="0.166667" izz="0.166667" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.1 0.3 0.7"/>
