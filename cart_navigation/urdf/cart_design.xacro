<?xml version='1.0'?>

<robot name="cart" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find cart_navigation)/urdf/cart_control.gazebo" />
  <xacro:include filename="$(find cart_navigation)/urdf/material.xacro" />

  <link name="base_footprint" />

  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="base_footprint" />
    <child link="base_link" />
  </joint>
  <link name='base_link'>
    <pose>0 0 0 0 0 0</pose>
    <inertial>
      <mass value="9.0" />
      <origin xyz="0.0 0 0" rpy="0 0 0" />
      <inertia ixx="0.204375" ixy="0" ixz="0" iyy="0.766875" iyz="0" izz="0.9375" />
    </inertial>
    <collision name='collision'>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="1 .5 .15" />
      </geometry>
    </collision>
    <visual name='base_link_visual'>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="1 .5 .15" />
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0" />
      </material>
    </visual>
  </link>

  <joint type="continuous" name="front_left_wheel_joint">
    <origin xyz="0.35 0.3 0" rpy="0 0 0" />
    <child link="front_left_wheel" />
    <parent link="base_link" />
    <axis xyz="0 1 0" rpy="0 0 0" />
    <limit effort="100" velocity="10" />
    <dynamics damping="3.0" friction="3.0" />
  </joint>
  <link name='front_left_wheel'>
    <inertial>
      <mass value="1.0" />
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <inertia ixx="0.004133" ixy="0" ixz="0" iyy="0.004133" iyz="0" izz="0.0072" />
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <geometry>
        <cylinder radius=".12" length=".08" />
      </geometry>
    </collision>
    <visual name='front_left_wheel_visual'>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <geometry>
        <cylinder radius=".12" length=".08" />
      </geometry>
      <material name="black">
        <color rgba="0.0 0.0 0.0 1.0" />
      </material>
    </visual>
  </link>

  <joint type="continuous" name="rear_left_wheel_joint">
    <origin xyz="-0.35 0.3 0" rpy="0 0 0" />
    <child link="rear_left_wheel" />
    <parent link="base_link" />
    <axis xyz="0 1 0" rpy="0 0 0" />
    <limit effort="100" velocity="10" />
    <dynamics damping="3.0" friction="3.0" />
  </joint>
  <link name='rear_left_wheel'>
    <inertial>
      <mass value="1.0" />
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <inertia ixx="0.004133" ixy="0" ixz="0" iyy="0.004133" iyz="0" izz="0.0072" />
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <geometry>
        <cylinder radius=".12" length=".08" />
      </geometry>
    </collision>
    <visual name='rear_left_wheel_visual'>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <geometry>
        <cylinder radius=".12" length=".08" />
      </geometry>
      <material name="black">
        <color rgba="0.0 0.0 0.0 1.0" />
      </material>
    </visual>
  </link>

  <joint type="continuous" name="front_right_wheel_joint">
    <origin xyz="0.35 -0.3 0" rpy="0 0 0" />
    <child link="front_right_wheel" />
    <parent link="base_link" />
    <axis xyz="0 1 0" rpy="0 0 0" />
    <limit effort="100" velocity="10" />
    <dynamics damping="3.0" friction="3.0" />
  </joint>
  <link name='front_right_wheel'>
    <inertial>
      <mass value="1.0" />
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <inertia ixx="0.004133" ixy="0" ixz="0" iyy="0.004133" iyz="0" izz="0.0072" />
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <geometry>
        <cylinder radius=".12" length=".08" />
      </geometry>
    </collision>
    <visual name='front_right_wheel_visual'>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <geometry>
        <cylinder radius=".12" length=".08" />
      </geometry>
      <material name="black">
        <color rgba="0.0 0.0 0.0 1.0" />
      </material>
    </visual>
  </link>

  <joint type="continuous" name="rear_right_wheel_joint">
    <origin xyz="-0.35 -0.3 0" rpy="0 0 0" />
    <child link="rear_right_wheel" />
    <parent link="base_link" />
    <axis xyz="0 1 0" rpy="0 0 0" />
    <limit effort="100" velocity="10" />
    <dynamics damping="3.0" friction="3.0" />
  </joint>
  <link name='rear_right_wheel'>
    <inertial>
      <mass value="1.0" />
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <inertia ixx="0.004133" ixy="0" ixz="0" iyy="0.004133" iyz="0" izz="0.0072" />
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <geometry>
        <cylinder radius=".12" length=".08" />
      </geometry>
    </collision>
    <visual name='rear_right_wheel_visual'>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
      <geometry>
        <cylinder radius=".12" length=".08" />
      </geometry>
      <material name="black">
        <color rgba="0.0 0.0 0.0 1.0" />
      </material>
    </visual>
  </link>

  <joint name="laser_joint" type="fixed">
    <parent link="base_link" />
    <child link="laser_frame" />
    <origin xyz="0.3 0 0.07" rpy="0 0 0" />
  </joint>
  <link name="laser_frame">
    <inertial>
      <mass value="0.1" />
      <origin xyz="0 0 0" rpy="0 0 0" />
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0002" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" />
      <geometry>
        <cylinder length="0.04" radius="0.05" />
      </geometry>
      <material name="laser_material">
        <color rgba="0.13 0.13 0.13 1.0" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" />
      <geometry>
        <cylinder length="0.04" radius="0.05" />
      </geometry>
    </collision>
  </link>

  <!-- STEP 6 - Gazebo frictions and colors -->
<gazebo reference="front_left_wheel">
  <mu1>1.5</mu1>
  <mu2>0.7</mu2>
  <kp>100000.0</kp>
  <kd>3000.0</kd>
  <minDepth>0.003</minDepth>
  <fdir1>0 1 0</fdir1>
</gazebo>

<gazebo reference="front_right_wheel">
  <mu1>1.5</mu1>
  <mu2>0.7</mu2>
  <kp>100000.0</kp>
  <kd>3000.0</kd>
  <minDepth>0.003</minDepth>
  <fdir1>0 1 0</fdir1>
</gazebo>

<gazebo reference="rear_left_wheel">
  <mu1>1.5</mu1>
  <mu2>0.7</mu2>
  <kp>100000.0</kp>
  <kd>3000.0</kd>
  <minDepth>0.003</minDepth>
  <fdir1>0 1 0</fdir1>
</gazebo>

<gazebo reference="rear_right_wheel">
  <mu1>1.5</mu1>
  <mu2>0.7</mu2>
  <kp>100000.0</kp>
  <kd>3000.0</kd>
  <minDepth>0.003</minDepth>
  <fdir1>0 1 0</fdir1>
</gazebo>

<gazebo reference="base_link">
  <mu1>0.1</mu1>
  <mu2>0.1</mu2>
  <!-- <material>Gazebo/Red</material> -->
</gazebo>

<gazebo reference="laser_frame">
  <sensor name="laser" type="gpu_lidar">
      <pose>0 0 0 0 0 0</pose>
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>50</update_rate>
      <topic>scan</topic>
      <gz_frame_id>laser_frame</gz_frame_id>
      <lidar>
        <scan>
          <horizontal>
            <samples>720</samples>
            <min_angle>-3.14</min_angle>
            <max_angle>3.14</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.3</min>
          <max>12</max>
        </range>
      </lidar>
  </sensor>
</gazebo>
</robot>
